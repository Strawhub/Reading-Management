<h1>Add New Page</h1>
<%= form_with(model: [@user, @book], url: user_books_path,remote: false ) do |form| %>
<%= form.label :title %>
<%= form.text_field :title, id: 'book_title' , value: params[:title]%>

<%= form.text_area :description, placeholder: 'enter body text' %>
<% if @book.errors.messages[:description].any? %>
    <span class="error"><%= @book.errors.messages[:description][0] %></span>
<% end %>
<%= form.submit %>
<% end %>



